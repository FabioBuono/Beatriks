<div class="login-container container">
  <div class="panel">
    <div class="panel-body">
      {{#if messages.error}}
        <div role="alert" class="alert alert-danger">
          {{#each messages.error}}
            <div>{{msg}}</div>
          {{/each}}
        </div>
      {{/if}}

      <form method="POST">
        <legend>Crea un Account</legend>
        <div class="form-group">
          <label for="name">Nome</label>
          <input type="text" name="name" id="name" placeholder="Name" class="form-control" autofocus>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" placeholder="Email" class="form-control">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" placeholder="Password" class="form-control">
        </div>
        <div class="form-group">
          <small class="text-muted">Cliccando su prosegui dichiari di accettare i <a href="/">Termini di servizio</a>.</small>
        </div>
        <button type="submit" class="btn btn-success">prosegui</button>
      </form>
      <div class="hr-title"><span>oppure</span></div>
      <div class="btn-toolbar text-center">
        <a href="/auth/facebook" class="btn btn-facebook">Loggati con Facebook</a>
        <a href="/auth/google" class="btn btn-google">Loggati con Google</a>
      </div>
    </div>
  </div>
  <p class="text-center">
    Sei gi√† registrato? <a href="/login"><strong>Log in</strong></a>
  </p>
</div>
